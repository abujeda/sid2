{
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION",
        "type": "text/plain"
      },
      "out": {
        "file": "VERSION",
        "type": "text/plain"
      }
    },
    "./calver-bump-patch.js": {
      "format": "YYYY.MM.MICRO.MODIFIER"
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  },
  "npm": false,
  "git": {
    "requireCleanWorkingDir": false,
    "tagName": "${version}"
  },
  "github": {
    "release": true,
    "preRelease": true,
    "assets": [
      "./target/**/**"
    ]
  }
}