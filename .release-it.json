{
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION",
        "type": "text/plain"
      },
      "out": {
        "file": "VERSION",
        "type": "text/plain"
      }
    },
    "./calver-bump-patch.js": {
      "format": "yyyy.mm.micro.modifier",
      "branches": {
        "*": "calendar>micro",
        "canary": "calendar>micro>dev"
      }
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  },
  "npm": false,
  "git": {
    "requireCleanWorkingDir": false,
    "tagName": "${version}"
  },
  "github": {
    "release": true,
    "preRelease": true,
    "assets": [
      "./target/**/**"
    ]
  }
}
