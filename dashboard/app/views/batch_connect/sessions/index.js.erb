(function() {
  var sessions = [];
  var $target;

  <%# Replace sessions whose state has changed %>
  <% @sessions.each do |session| %>
    sessions.push('<%= session.id %>');
    $target = $('#<%= session.id %>');
    if ( $target.data('hash') !== '<%= session.to_hash %>' ) {
      $target.replaceWith('<%= j render(partial: "panel", locals: { session: session }) %>');
    }
  <% end %>

  <%# Remove sessions that don't exist anymore %>
  $('.session-panel').each(function () {
    if ( $.inArray($(this).attr('id'), sessions) < 0 ) {
      $(this).remove();
    }
  });

    <%# UPDATE THE NUMBER OF SESSIONS %>
    $('#<%= number_of_sessions_text_id %>').replaceWith('<%= number_of_sessions_text(@sessions.length) %>');
    $('#<%= view_interactive_sessions_link_container_id %>').toggle(<%= show_more_sessions_link?(@sessions.length) %>);
})();
